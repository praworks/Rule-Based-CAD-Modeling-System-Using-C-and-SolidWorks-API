<UserControl x:Class="AICAD.UI.TextToCADTaskpaneWpf"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" 
             d:DesignWidth="472" d:DesignHeight="800">

    <Grid Margin="6">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" MinHeight="40"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <Border Grid.Row="0" BorderBrush="#FFEEEEEE" BorderThickness="0,0,0,1" Margin="0,0,0,5">
            <WrapPanel Orientation="Horizontal" VerticalAlignment="Top">
                <Button Content="New Project" Padding="8,4" Margin="0,0,5,5" Background="Transparent"/>
                <Button Content="Import" Padding="8,4" Margin="0,0,5,5" Background="Transparent"/>
                <Button x:Name="addSeriesButton" Content="+ Series" Padding="8,4" Margin="0,0,5,5" Background="Transparent" Foreground="#005A9E"/>
            </WrapPanel>
        </Border>

        <StackPanel Grid.Row="1" Margin="0,0,0,10">

            <Border Background="#F9F9F9" BorderBrush="#E0E0E0" BorderThickness="1" Margin="0,0,0,5" Padding="5">
                <StackPanel>
                    <Label Content="Select Series" Foreground="#005A9E" FontWeight="SemiBold" Padding="0,0,0,2"/>
                    <DockPanel>
                        <Label Content="Series:" FontSize="10" Foreground="Gray" Padding="0"/>
                        <Label x:Name="nextSequenceLabel" Content="Next Sequence: 0018" FontStyle="Italic" Foreground="Gray" FontSize="10" HorizontalAlignment="Right"/>
                    </DockPanel>
                    <ComboBox x:Name="seriesComboBox" Margin="0,2,0,5" SelectedIndex="0">
                        <ComboBoxItem>ASM</ComboBoxItem>
                        <ComboBoxItem>PRT</ComboBoxItem>
                        <ComboBoxItem>DRW</ComboBoxItem>
                    </ComboBox>
                </StackPanel>
            </Border>

            <Border Background="#F9F9F9" BorderBrush="#E0E0E0" BorderThickness="1" Margin="0,0,0,5" Padding="5">
                <StackPanel>
                    <Label Content="Material" Foreground="#005A9E" FontWeight="SemiBold" Padding="0,0,0,2"/>
                    <Label Content="Select Material:" FontSize="10" Foreground="Gray" Padding="0"/>
                    <ComboBox x:Name="materialComboBox" Margin="0,2,0,0" SelectedIndex="0">
                        <ComboBoxItem>Aluminum 6061</ComboBoxItem>
                        <ComboBoxItem>Steel 1020</ComboBoxItem>
                        <ComboBoxItem>ABS Plastic</ComboBoxItem>
                    </ComboBox>
                </StackPanel>
            </Border>

            <Border Background="#F9F9F9" BorderBrush="#E0E0E0" BorderThickness="1" Margin="0,0,0,5" Padding="5">
                <StackPanel>
                    <Label Content="Type Description" Foreground="#005A9E" FontWeight="SemiBold" Padding="0,0,0,2"/>
                    <Label Content="Description:" FontSize="10" Foreground="Gray" Padding="0"/>
                    <TextBox x:Name="typeDescriptionTextBox" Margin="0,2,0,0" Height="24"/>
                </StackPanel>
            </Border>

            <Border Background="#F9F9F9" BorderBrush="#E0E0E0" BorderThickness="1" Margin="0,0,0,5" Padding="5">
                <StackPanel>
                    <Label Content="Weight" Foreground="#005A9E" FontWeight="SemiBold" Padding="0,0,0,2"/>
                    <Label Content="Weight (kg):" FontSize="10" Foreground="Gray" Padding="0"/>
                    <TextBox x:Name="weightTextBox" Margin="0,2,0,0" Height="24" Background="#FAFAFA" IsReadOnly="True"/>
                </StackPanel>
            </Border>

            <Border Background="#F9F9F9" BorderBrush="#E0E0E0" BorderThickness="1" Margin="0,0,0,10" Padding="5">
                <StackPanel>
                    <Label Content="Generated Name Preview" Foreground="#005A9E" FontWeight="SemiBold" Padding="0,0,0,2"/>
                    <TextBox x:Name="previewTextBox" Text="ASM-0018" FontWeight="Bold" HorizontalContentAlignment="Center" IsReadOnly="True" Margin="0,5,0,0" Height="30" VerticalContentAlignment="Center" BorderBrush="#005A9E"/>
                </StackPanel>
            </Border>

            <StackPanel Margin="0,5,0,0">
                <Button x:Name="saveWithNameButton" 
                        Content="Save With This Name" 
                        Height="35" Margin="0,0,0,8" 
                        Background="#0066CC" Foreground="White" FontWeight="Bold" BorderThickness="0"/>

                <Button x:Name="applyPropertiesButton" 
                        Content="Apply Properties" 
                        Height="30" Margin="0,0,0,5" 
                        Background="#F0F0F0" Foreground="#003366" BorderBrush="#CCCCCC" BorderThickness="1"/>
            </StackPanel>

        </StackPanel>

         <Label x:Name="lblRealTimeStatus" Grid.Row="2" 
             Padding="2,0,0,2" Foreground="DimGray" 
             Content="Ready" FontSize="11" HorizontalAlignment="Left"/>
         <Label x:Name="lblModified" Grid.Row="2"
             Padding="0,0,2,2" Foreground="Firebrick"
             Content="Modified" FontSize="11" HorizontalAlignment="Right"
             Visibility="Collapsed"/>

        <Grid Grid.Row="3" Margin="0,0,0,10">
            <TextBox x:Name="prompt" 
                     AcceptsReturn="True" TextWrapping="Wrap" 
                     VerticalScrollBarVisibility="Auto" Padding="8,8,105,8" 
                     Text="Enter prompt..." VerticalAlignment="Stretch"
                     BorderBrush="#FFCCCCCC"/>
            <Button x:Name="build" Content="Build ðŸš€" 
                    HorizontalAlignment="Right" VerticalAlignment="Bottom" 
                    Margin="0,0,10,10" Height="30" Width="85"
                    Background="#FF007ACC" Foreground="White" FontWeight="SemiBold" BorderThickness="0"/>
        </Grid>

        <Grid Grid.Row="4" Margin="0,0,0,10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>
            <Label x:Name="presetLabel" Grid.Column="0" Content="Preset:" VerticalAlignment="Center" Foreground="DimGray"/>
            <ComboBox x:Name="shapePreset" Grid.Column="1" VerticalAlignment="Center" SelectedIndex="0" Margin="5,0" Height="26">
                <ComboBoxItem>â€” none â€”</ComboBoxItem>
                <ComboBoxItem>Box 100x50x25 mm</ComboBoxItem>
                <ComboBoxItem>Cylinder Ã˜40 x 80 mm</ComboBoxItem>
            </ComboBox>
            <Label x:Name="lblVersion" Grid.Column="2" Foreground="Silver" Content="v1.0" VerticalAlignment="Center" FontSize="10"/>
        </Grid>

        <Grid Grid.Row="5">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>
            <StackPanel Grid.Column="0" Orientation="Horizontal">
                <Button x:Name="btnThumbDown" Content="ðŸ‘Ž" Background="Transparent" BorderThickness="0" Margin="0,0,5,0"/>
                <Button x:Name="btnThumbUp" Content="ðŸ‘" Background="Transparent" BorderThickness="0"/>
            </StackPanel>
            <StackPanel Grid.Column="2" Orientation="Horizontal">
                <Button x:Name="btnHistory" Content="History" Padding="8,2" Margin="5,0,0,0"/>
                <Button x:Name="btnStatus" Content="Status" Padding="8,2" Margin="5,0,0,0"/>
                <Button x:Name="btnSettings" Content="âš™ï¸" ToolTip="Settings" Padding="5,2" Margin="5,0,0,0"/>
            </StackPanel>
        </Grid>
    </Grid>
</UserControl>