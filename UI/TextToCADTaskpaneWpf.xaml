<UserControl x:Class="AICAD.UI.TextToCADTaskpaneWpf"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:ui="clr-namespace:AICAD.UI"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" 
             d:DesignWidth="472" d:DesignHeight="1200"
             Focusable="True"
             Width="Auto" Height="Auto"
             HorizontalAlignment="Stretch" VerticalAlignment="Stretch"
             Background="Transparent">

    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="Theme.xaml"/>
            </ResourceDictionary.MergedDictionaries>
            <ui:NullToCollapsedConverter x:Key="NullToCollapsedConverter" />
            <ui:EnumToVisibilityConverter x:Key="EnumToVisibilityConverter" />
        </ResourceDictionary>
    </UserControl.Resources>

    <Grid Margin="8" HorizontalAlignment="Stretch" VerticalAlignment="Stretch">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <StackPanel Grid.Row="0">

            <Border Background="Transparent" BorderBrush="{StaticResource InputBorderBrush}" BorderThickness="0" Margin="0,0,0,6" Padding="4,2">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto" MinWidth="120"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <Label Grid.Column="0" Content="Select Series" Foreground="{StaticResource AccentBrush}" FontWeight="SemiBold" VerticalAlignment="Center" Padding="0,0,8,0"/>
                    <ComboBox Grid.Column="1" x:Name="seriesComboBox" SelectedIndex="0" HorizontalAlignment="Stretch" Height="26" VerticalContentAlignment="Center" Background="{x:Null}">
                        <ComboBoxItem>ASM</ComboBoxItem>
                        <ComboBoxItem>PRT</ComboBoxItem>
                        <ComboBoxItem>DRW</ComboBoxItem>
                    </ComboBox>
                </Grid>
            </Border>

            <Border Background="Transparent" BorderBrush="{StaticResource InputBorderBrush}" BorderThickness="0" Margin="0,0,0,6" Padding="4,2">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto" MinWidth="120"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <Label Grid.Column="0" Content="Material" Foreground="{StaticResource AccentBrush}" FontWeight="SemiBold" VerticalAlignment="Center" Padding="0,0,8,0"/>
                    <ComboBox Grid.Column="1" x:Name="materialComboBox" SelectedIndex="0" IsEditable="True" Height="26" VerticalContentAlignment="Center" HorizontalAlignment="Stretch" Background="{x:Null}">
                        <ComboBoxItem>Steel, Mild</ComboBoxItem>
                        <ComboBoxItem>Aluminum 1060 Alloy</ComboBoxItem>
                        <ComboBoxItem>Stainless Steel</ComboBoxItem>
                        <ComboBoxItem>Brass</ComboBoxItem>
                        <ComboBoxItem>Copper</ComboBoxItem>
                        <ComboBoxItem>Bronze</ComboBoxItem>
                        <ComboBoxItem>Titanium</ComboBoxItem>
                        <ComboBoxItem>ABS PC</ComboBoxItem>
                        <ComboBoxItem>Polycarbonate</ComboBoxItem>
                        <ComboBoxItem>Polypropylene</ComboBoxItem>
                        <ComboBoxItem>PVC Rigid</ComboBoxItem>
                        <ComboBoxItem>Nylon 6/10</ComboBoxItem>
                        <ComboBoxItem>Cast Alloy Steel</ComboBoxItem>
                        <ComboBoxItem>Plain Carbon Steel</ComboBoxItem>
                        <ComboBoxItem>Alloy Steel</ComboBoxItem>
                        <ComboBoxItem>Aluminum 6061</ComboBoxItem>
                        <ComboBoxItem>Aluminum 2014</ComboBoxItem>
                        <ComboBoxItem>Aluminum 5052</ComboBoxItem>
                        <ComboBoxItem>Aluminum 7075</ComboBoxItem>
                        <ComboBoxItem>304 Stainless</ComboBoxItem>
                        <ComboBoxItem>316 Stainless</ComboBoxItem>
                        <ComboBoxItem>Custom</ComboBoxItem>
                    </ComboBox>
                </Grid>
            </Border>

            <Border Background="Transparent" BorderBrush="{StaticResource InputBorderBrush}" BorderThickness="0" Margin="0,0,0,6" Padding="4,2">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto" MinWidth="120"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <Label Grid.Column="0" Content="Description" Foreground="{StaticResource AccentBrush}" FontWeight="SemiBold" VerticalAlignment="Center" Padding="0,0,8,0"/>
                    <TextBox Grid.Column="1" x:Name="typeDescriptionTextBox" Height="26" VerticalContentAlignment="Center" IsReadOnly="False" IsEnabled="True" Style="{StaticResource TextBoxStyle}" HorizontalAlignment="Stretch"/>
                </Grid>
            </Border>

            <Border Background="Transparent" BorderBrush="{StaticResource InputBorderBrush}" BorderThickness="0" Margin="0,0,0,6" Padding="4,2">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto" MinWidth="120"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <Label Grid.Column="0" Content="Weight" Foreground="{StaticResource AccentBrush}" FontWeight="SemiBold" VerticalAlignment="Center" Padding="0,0,8,0"/>
                    <TextBox Grid.Column="1" x:Name="weightTextBox" Height="26" VerticalContentAlignment="Center" IsReadOnly="True" Style="{StaticResource TextBoxStyle}" HorizontalAlignment="Stretch"/>
                </Grid>
            </Border>

            <Border Background="Transparent" BorderBrush="{StaticResource InputBorderBrush}" BorderThickness="0" Margin="0,0,0,8" Padding="4,2">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    <Label Grid.Column="0" Content="Generated Name Preview" Foreground="{StaticResource AccentBrush}" FontWeight="SemiBold" VerticalAlignment="Center" Padding="0"/>
                    <TextBox Grid.Column="1" x:Name="previewTextBox" Text="ASM-0018" FontWeight="Bold" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" IsReadOnly="True" Height="26" Style="{StaticResource TextBoxStyle}" Width="100"/>
                </Grid>
            </Border>

            <StackPanel Margin="0,4,0,0">
                <Button x:Name="saveWithNameButton" 
                    Content="Save With This Name" 
                    Height="26" Margin="0,0,0,4" 
                    Style="{StaticResource PrimaryButton}" HorizontalAlignment="Stretch"/>

                <Button x:Name="applyPropertiesButton" 
                    Content="Apply Properties" 
                    Height="26" Margin="0,0,0,2" 
                    Style="{StaticResource PrimaryButton}" HorizontalAlignment="Stretch"/>
            </StackPanel>
        </StackPanel>

        <Grid Grid.Row="2" Margin="0,8,0,0">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <Border Grid.Row="1" Background="Transparent" CornerRadius="{StaticResource CardCornerRadius}" Padding="8,4" Margin="0,0,0,4">
                <StackPanel x:Name="ProgressStatusPanel">
                    <ItemsControl x:Name="StepsItemsControl" Margin="0,0,0,2">
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <Grid Margin="0,0">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="22"/>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="70"/>
                                    </Grid.ColumnDefinitions>
                                                    <TextBlock Grid.Column="0" VerticalAlignment="Center" FontSize="11" Text="â—" Foreground="{StaticResource TextMutedBrush}" Visibility="{Binding State, Converter={StaticResource EnumToVisibilityConverter}, ConverterParameter=Pending}"/>
                                                    <TextBlock Grid.Column="0" VerticalAlignment="Center" FontSize="11" Text="âŸ³" Foreground="{StaticResource RunningIconBrush}" Visibility="{Binding State, Converter={StaticResource EnumToVisibilityConverter}, ConverterParameter=Running}"/>
                                                    <TextBlock Grid.Column="0" VerticalAlignment="Center" FontSize="11" Text="âœ”" Foreground="{StaticResource SuccessIconBrush}" Visibility="{Binding State, Converter={StaticResource EnumToVisibilityConverter}, ConverterParameter=Success}"/>
                                                    <TextBlock Grid.Column="0" VerticalAlignment="Center" FontSize="11" Text="âš " Foreground="{StaticResource ErrorIconBrush}" Visibility="{Binding State, Converter={StaticResource EnumToVisibilityConverter}, ConverterParameter=Error}"/>

                                    <TextBlock Grid.Column="1" Text="{Binding Label}" FontWeight="SemiBold" FontSize="10" VerticalAlignment="Center"/>

                                    <StackPanel Grid.Column="2" Orientation="Horizontal" HorizontalAlignment="Right" VerticalAlignment="Center">
                                        <TextBlock Text="{Binding BarString}" FontFamily="{StaticResource ConsoleFontFamily}" FontSize="8" VerticalAlignment="Center" Visibility="{Binding Percent, Converter={StaticResource NullToCollapsedConverter}}"/>
                                        <TextBlock Text="{Binding Percent, StringFormat='{}{0}%'}" Margin="4,0,0,0" FontSize="9" VerticalAlignment="Center" Foreground="{StaticResource ProgressPercentBrush}" FontWeight="SemiBold" Visibility="{Binding Percent, Converter={StaticResource NullToCollapsedConverter}}"/>
                                    </StackPanel>
                                </Grid>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                    <TextBlock x:Name="KaraokeStatus" FontSize="11" FontWeight="SemiBold" TextWrapping="Wrap" Margin="0,2,0,2" Foreground="{StaticResource TextPrimaryBrush}" Visibility="Collapsed"/>
                    
                    <!-- Progress bar moved here - right after task complete status -->
                    <Grid Margin="0,4,0,0">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        <ProgressBar x:Name="generationProgressBar" Grid.Column="0" Height="{StaticResource ProgressBarHeight}" Foreground="{StaticResource AccentBrush}" Background="{StaticResource InputBorderBrush}" BorderThickness="0"/>
                        <TextBlock x:Name="generationProgressText" Grid.Column="1" Text="" Foreground="{StaticResource AccentBrush}" FontSize="{StaticResource FontSizeSmall}" Margin="8,0,0,0" VerticalAlignment="Center" FontWeight="SemiBold"/>
                    </Grid>
                </StackPanel>
            </Border>

            <Grid Grid.Row="2" Margin="0,0,0,4">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="90"/>
                </Grid.ColumnDefinitions>

                <!-- User-friendly feedback text above prompt -->
                <TextBlock Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="2" 
                           x:Name="promptFeedbackText" 
                           Text="ðŸ’¡ Describe what you want to create (e.g., 'box 50x50x100mm' or 'cylinder radius 20mm height 80mm')" 
                           Foreground="{StaticResource TextMutedBrush}" 
                           FontSize="11" 
                           Margin="2,0,0,4" 
                           TextWrapping="Wrap"
                           Opacity="0.85"/>

                <TextBox x:Name="prompt" Grid.Row="1" Grid.Column="0" AcceptsReturn="True" TextWrapping="Wrap" VerticalScrollBarVisibility="Auto" Padding="6" Text="Enter prompt..." GotFocus="prompt_GotFocus" LostFocus="prompt_LostFocus" PreviewKeyDown="prompt_PreviewKeyDown" Style="{StaticResource TextBoxStyle}" Margin="0,0,4,0"/>

                <Button x:Name="build" Grid.Row="1" Grid.Column="1" Content="Build ðŸš€" Height="26" VerticalAlignment="Top" Style="{StaticResource PrimaryButton}"/>
            </Grid>
        </Grid>

        <Grid Grid.Row="3" Margin="0,4,0,8">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>
            <ComboBox x:Name="shapePreset" Grid.Column="1" SelectedIndex="0" Height="26" VerticalContentAlignment="Center" Margin="4,0,4,0" />
        </Grid>

        <Grid Grid.Row="4" Margin="0,2,0,0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>
            <StackPanel Grid.Column="0" Orientation="Horizontal">
                <Button x:Name="btnThumbDown" Content="ðŸ‘Ž" Background="Transparent" BorderThickness="0" Margin="0,0,3,0"/>
                <Button x:Name="btnThumbUp" Content="ðŸ‘" Background="Transparent" BorderThickness="0"/>
                <Label x:Name="feedbackLabel" Content="Successful?" Foreground="{StaticResource TextMutedBrush}" VerticalAlignment="Center" Margin="3,0,0,0" FontSize="{StaticResource FontSizeTask}"/>
            </StackPanel>
                <StackPanel Grid.Column="2" Orientation="Horizontal">
                <Button x:Name="btnHistory" Content="History" Padding="6,1" Margin="3,0,0,0" FontSize="{StaticResource FontSizeTask}"/>
                <Button x:Name="btnStatus" Content="ðŸ‘ï¸" Padding="6,1" Margin="3,0,0,0"/>
                <Button x:Name="btnSettings" Content="âš™ï¸" ToolTip="Settings" Padding="4,1" Margin="3,0,0,0"/>
            </StackPanel>
        </Grid>
    </Grid>
</UserControl>