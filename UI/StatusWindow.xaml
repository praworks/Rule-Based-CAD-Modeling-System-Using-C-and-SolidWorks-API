<Window x:Class="AICAD.UI.StatusWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Status Console"
        Height="300" Width="800"
        WindowStartupLocation="CenterOwner"
        Topmost="True"
        MinHeight="200" MinWidth="400">

    <Window.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="Theme.xaml"/>
            </ResourceDictionary.MergedDictionaries>
            <!-- Make PrimaryButton the default for Buttons in this window (FlatNavButton overrides keep nav look) -->
            <Style TargetType="Button" BasedOn="{StaticResource PrimaryButton}" />
        </ResourceDictionary>
    </Window.Resources>

    <DockPanel LastChildFill="True" Background="{StaticResource PanelBackground}" x:Name="RootPanel" Margin="10">
        <!-- Toolbar -->
        <StackPanel DockPanel.Dock="Top" Orientation="Horizontal" Height="35" Margin="0,0,0,5">
            <Button x:Name="BtnCopyAll" Content="Copy All" Style="{StaticResource PrimaryButton}" Width="90" Height="28" Margin="0,0,6,0"/>
            <Button x:Name="BtnClear" Content="Clear" Style="{StaticResource PrimaryButton}" Width="80" Height="28" Margin="0,0,6,0"/>
            <Button x:Name="BtnExpand" Content="Expand" Style="{StaticResource PrimaryButton}" Width="90" Height="28"/>
        </StackPanel>

        <!-- Error row -->
        <StackPanel DockPanel.Dock="Bottom" Orientation="Horizontal" Height="35" Margin="0,5,0,0">
            <TextBox x:Name="_errorTextBox" IsReadOnly="True" Style="{StaticResource TextBoxStyle}" Width="500" Margin="0,0,6,0"/>
            <Button x:Name="BtnCopyError" Content="Copy Error" Style="{StaticResource PrimaryButton}" Width="100" Height="28" Margin="0,0,6,0"/>
            <Button x:Name="BtnCopyRun" Content="Copy Run" Style="{StaticResource PrimaryButton}" Width="100" Height="28"/>
        </StackPanel>

        <!-- Console -->
            <Border Background="{StaticResource ConsoleBackground}" BorderBrush="{StaticResource BorderLightBrush}" BorderThickness="1" CornerRadius="3">
            <RichTextBox x:Name="_statusConsole" IsReadOnly="True" Style="{StaticResource ConsoleRichTextBoxStyle}" />
        </Border>
    </DockPanel>
</Window>
