<Window x:Class="AICAD.UI.SettingsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        mc:Ignorable="d"
        Title="Settings" Height="600" Width="820" Background="#F9F9F9">

    <Window.Resources>
        <Color x:Key="AccentColor">#005A9E</Color>
        <SolidColorBrush x:Key="AccentBrush" Color="#005A9E" />
        <SolidColorBrush x:Key="PanelBackground" Color="#F9F9F9" />

        <Style x:Key="FlatNavButton" TargetType="Button">
            <Setter Property="Background" Value="Transparent" />
            <Setter Property="BorderThickness" Value="0" />
            <Setter Property="Padding" Value="8" />
            <Setter Property="HorizontalContentAlignment" Value="Left" />
            <Setter Property="Foreground" Value="{StaticResource AccentBrush}" />
            <Setter Property="FontWeight" Value="SemiBold" />
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" Padding="{TemplateBinding Padding}">
                            <ContentPresenter VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#E8F3FF"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="Background" Value="#DCEFFB"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="PrimaryButton" TargetType="Button">
            <Setter Property="Background" Value="#005A9E" />
            <Setter Property="Foreground" Value="White" />
            <Setter Property="Padding" Value="6,4" />
            <Setter Property="BorderThickness" Value="0" />
            <Setter Property="FontWeight" Value="SemiBold" />
        </Style>

        <Style TargetType="TextBox">
            <Setter Property="Margin" Value="0,2,0,6" />
            <Setter Property="Padding" Value="6" />
            <Setter Property="Background" Value="White" />
            <Setter Property="BorderBrush" Value="#E0E0E0" />
            <Setter Property="BorderThickness" Value="1" />
        </Style>

        <Style TargetType="Label">
            <Setter Property="Foreground" Value="#333333" />
            <Setter Property="FontSize" Value="12" />
        </Style>
    </Window.Resources>

    <Grid Margin="12">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="180" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>

        <Border Grid.Column="0" Background="#FFFFFF" BorderBrush="#E8E8E8" BorderThickness="1" Padding="8" CornerRadius="4">
            <StackPanel>
                <TextBlock Text="Settings" Foreground="{StaticResource AccentBrush}" FontSize="16" FontWeight="Bold" Margin="4,0,0,10" />

                <Button x:Name="btnGeneral" Content="General" Style="{StaticResource FlatNavButton}" Click="NavButton_Click" Tag="GeneralPanel" />
                <Button x:Name="btnMongo" Content="MongoDB" Style="{StaticResource FlatNavButton}" Click="NavButton_Click" Tag="MongoPanel" />
                <Button x:Name="btnApiKeys" Content="API Keys" Style="{StaticResource FlatNavButton}" Click="NavButton_Click" Tag="ApiKeysPanel" />
                <Button x:Name="btnNameEasy" Content="NameEasy" Style="{StaticResource FlatNavButton}" Click="NavButton_Click" Tag="NameEasyPanel" />
                <Button x:Name="btnSamples" Content="Samples" Style="{StaticResource FlatNavButton}" Click="NavButton_Click" Tag="SamplesPanel" />

                <StackPanel Margin="0,18,0,0">
                    <Button x:Name="btnSaveAll" Content="Save All" Style="{StaticResource PrimaryButton}" Click="SaveAll_Click" />
                </StackPanel>
            </StackPanel>
        </Border>

        <Border Grid.Column="1" Background="#F9F9F9" BorderBrush="#E8E8E8" BorderThickness="1" Padding="12" Margin="12,0,0,0" CornerRadius="4">
            <ScrollViewer VerticalScrollBarVisibility="Auto">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="*" />
                    </Grid.RowDefinitions>

                    <StackPanel Grid.Row="0" Orientation="Horizontal" HorizontalAlignment="Stretch" VerticalAlignment="Center">
                        <TextBlock x:Name="contentTitle" Text="General" FontSize="14" FontWeight="Bold" Foreground="{StaticResource AccentBrush}" />
                    </StackPanel>

                    <Grid Grid.Row="1">
                        <StackPanel x:Name="GeneralPanel" Visibility="Visible">
                            <Label Content="General Settings" Foreground="{StaticResource AccentBrush}" FontWeight="SemiBold" />
                            <TextBlock Text="No general options yet." Foreground="#666666" />
                        </StackPanel>

                        <StackPanel x:Name="MongoPanel" Visibility="Collapsed">
                            <Label Content="MongoDB Connection" Foreground="{StaticResource AccentBrush}" FontWeight="SemiBold" />
                            <Label Content="Connection String" />
                            <TextBox x:Name="MongoConnectionStringTextBox" Height="26" />
                            <Label Content="Database Name" />
                            <TextBox x:Name="MongoDbNameTextBox" Height="26" />
                            <TextBlock x:Name="MongoStatusTextBlock" Text="" Foreground="#333333" Margin="0,6,0,0" />
                            <StackPanel Orientation="Horizontal" Margin="0,8,0,0">
                                <Button x:Name="LoadMongoButton" Content="Load" Style="{StaticResource FlatNavButton}" Click="LoadMongoButton_Click" />
                                <Button x:Name="SaveMongoButton" Content="Save" Style="{StaticResource PrimaryButton}" Click="SaveMongoButton_Click" Margin="8,0,0,0" />
                            </StackPanel>
                        </StackPanel>

                        <StackPanel x:Name="ApiKeysPanel" Visibility="Collapsed">
                            <Label Content="API Keys &amp; Endpoints" Foreground="{StaticResource AccentBrush}" FontWeight="SemiBold" />

                            <Label Content="Gemini API Key" />
                            <TextBox x:Name="GeminiApiKeyTextBox" Height="26" />

                            <Label Content="Groq API Key" />
                            <TextBox x:Name="GroqApiKeyTextBox" Height="26" />

                            <Label Content="Local LLM Endpoint" />
                            <TextBox x:Name="LocalLlmEndpointTextBox" Height="26" Text="http://localhost:1234/v1/chat/completions" />

                            <Label Content="Local Model" />
                            <TextBox x:Name="LocalLlmModelTextBox" Height="26" />

                            <StackPanel Orientation="Horizontal" Margin="0,8,0,0">
                                <Button x:Name="TestApiButton" Content="Test API" Style="{StaticResource FlatNavButton}" Click="TestApiButton_Click" />
                                <Button x:Name="SaveApiKeysButton" Content="Save" Style="{StaticResource PrimaryButton}" Click="SaveApiKeysButton_Click" Margin="8,0,0,0" />
                            </StackPanel>
                            <TextBlock x:Name="ApiStatusTextBlock" Text="" Foreground="#333333" Margin="0,8,0,0" />
                        </StackPanel>

                        <StackPanel x:Name="NameEasyPanel" Visibility="Collapsed">
                            <Label Content="NameEasy Settings" Foreground="{StaticResource AccentBrush}" FontWeight="SemiBold" />
                            <Label Content="Preset Folder" />
                            <TextBox x:Name="NameEasyFolderTextBox" Height="26" />
                            <StackPanel Orientation="Horizontal" Margin="0,8,0,0">
                                <Button x:Name="BrowseNameEasyButton" Content="Browse..." Style="{StaticResource FlatNavButton}" Click="BrowseNameEasyButton_Click" />
                                <Button x:Name="SaveNameEasyButton" Content="Save" Style="{StaticResource PrimaryButton}" Click="SaveNameEasyButton_Click" Margin="8,0,0,0" />
                            </StackPanel>
                        </StackPanel>

                        <StackPanel x:Name="SamplesPanel" Visibility="Collapsed">
                            <Label Content="Samples Folder" Foreground="{StaticResource AccentBrush}" FontWeight="SemiBold" />
                            <Label Content="Samples JSONL File" />
                            <TextBox x:Name="SamplesFileTextBox" Height="26" />
                            <StackPanel Orientation="Horizontal" Margin="0,8,0,0">
                                <Button x:Name="BrowseSamplesButton" Content="Browse..." Style="{StaticResource FlatNavButton}" Click="BrowseSamplesButton_Click" />
                                <Button x:Name="SaveSamplesButton" Content="Save" Style="{StaticResource PrimaryButton}" Click="SaveSamplesButton_Click" Margin="8,0,0,0" />
                            </StackPanel>
                        </StackPanel>
                    </Grid>
                </Grid>
            </ScrollViewer>
        </Border>
    </Grid>
</Window>